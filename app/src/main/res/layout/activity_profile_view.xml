<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    tools:context="com.dogwalker.itaynaama.dogwalker.ProfileView"
        android:background="#ffffff">

        <Button
            android:id="@+id/edit_profile_button"
            android:text="edit profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/view_user_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_transparent" />

        <TextView
            android:id="@+id/profile_name"
            android:textColor="@color/base_app_color"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:singleLine="false"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/profile_user_name"
            android:textColor="@color/base_app_color"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/profile_user_city"
            android:textColor="@color/base_app_color"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/profile_user_phone"
            android:textColor="@color/base_app_color"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/profile_user_sharePhone"
            android:textColor="@android:color/holo_green_light"
            android:textSize="30dp"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Walking Availability"
            android:id="@+id/textView6"
            android:background="#646464"
            android:textColor="@android:color/white"
            android:padding="4dp"
            android:textStyle="bold"
            android:textSize="15sp" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:id="@+id/view_availability_items"
            android:orientation="vertical">

        </GridLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view_profile_availability_items"
            android:clickable="false"
            android:layout_margin="5dp" />


    </LinearLayout>
</ScrollView>