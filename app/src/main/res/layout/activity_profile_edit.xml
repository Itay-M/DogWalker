<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context="com.dogwalker.itaynaama.dogwalker.ProfileEdit"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/view_curr_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_transparent" />

    <Button
        android:id="@+id/change_pic_button"
        android:text="change profile picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/profile_name_edit"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/profile_address_edit"
            android:textColor="@android:color/holo_green_light"
            android:textSize="30dp"
            android:textStyle="italic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_address_change_edit"
            android:src="@android:drawable/ic_menu_edit" />
    </LinearLayout>

    <EditText
        android:id="@+id/profile_user_phone_edit"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/reset_mail_question"
        android:text="reset password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/reset_password_button"
        android:text="reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/save_changes_button"
        android:text="save changes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
